%header.row
  %h1.text-center.col-md-6.col-md-offset-3 Find Recipes
%section.row
  %form
    .form-group.col-md-6.col-md-offset-3
      %label.sr-only{for: 'keywords'} Keywords
      %input.form-control(autofocus){name:'keywords', 'ng-model':'keywords', placeholder: 'Section name, e.g. Baked Potato', type: 'text'}
    .form-group.col-md-6.col-md-offset-3.text-center
      %button.btn.btn-primary.btn-lg(ng-click="search(keywords)") Search
      %button.btn.btn-info.btn-lg(ng-click="newRecipe()") New Section...
%hr
  %section.row(ng-if="sections")
    %h1.text-center.h2 Results
    %ul.list-unstyled
      %li(ng-repeat="section in sections" )
        %section.well.col-md-6.col-md-offset-3
          %h1.h3.col-md-6.text-right{style: 'margin-top:0'}
            %a(href){'ng-click':'view(section.id)'}{{section.name}}
          .col-md-6
            %button.btn.btn-info(ng-click="edit(section.id)") Edit